apt-get update; apt-get upgrade -y; apt-get dist-upgrade -y

cd /usr/local/src
wget https://download.bestpractical.com/pub/rt/release/rt.tar.gz
gunzip rt.tar.gz
tar -xvf rt.tar
apt-get install build-essential mysql-server apache2 postfix mailutils openssl libyaml-0-2 libyaml-appconfig-perl libexpat1-dev liblwp-protocol-https-perl libapache2-mod-fastcgi libssl-dev -y
cd rt-*
./configure
make testdeps
/usr/bin/perl -MCPAN -e shell
make fixdeps
exit
make fixdeps
make testdeps

make install
